  <h2 class="pt-4 color-scheme-text text-center">Beispiele</h2>
  <!--Image Carousell with clickable cards-->
  <div class="container py-3" data-aos="fade-up">
    <div id="carouselExampleIndicators" class="carousel slide">
      <div class="carousel-indicators">
        <button
          type="button"
          data-bs-target="#carouselExampleIndicators"
          data-bs-slide-to="0"
          class="active btn-secondary"
          aria-current="true"
          aria-label="Slide 1"
        ></button>
        <button
          type="button"
          data-bs-target="#carouselExampleIndicators"
          data-bs-slide-to="1"
          class="btn-secondary"
          aria-label="Slide 2"
        ></button>
        <button
          type="button"
          data-bs-target="#carouselExampleIndicators"
          data-bs-slide-to="2"
          class="btn-secondary"
          aria-label="Slide 3"
        ></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class="row">
            <div class="col-md-4 mb-3">
              <div class="card clickable" data-card-id="1" id="carousel-card-1">
                <img
                  class="img-fluid"
                  alt="100%x280"
                  src="/Bilderkarussell/galaxie.jpeg"
                />
                <div class="card-body">
                  <h4 class="card-title">Fotodruck</h4>
                  <p class="card-text"></p>
                </div>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="card clickable" data-card-id="2" id="carousel-card-2">
                <img
                  class="img-fluid"
                  alt="100%x280"
                  src="/Bilderkarussell/guernica.jpg"
                />
                <div class="card-body">
                  <h4 class="card-title">Reproduktion</h4>
                  <p class="card-text"></p>
                </div>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="card clickable" data-card-id="3" id="carousel-card-3">
                <img
                  class="img-fluid"
                  alt="100%x280"
                  src="/Bilderkarussell/keramikwand.jpg"
                />
                <div class="card-body">
                  <h4 class="card-title">keramikwand</h4>
                  <p class="card-text"></p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="carousel-item">
          <div class="row">
            <div class="col-md-4 mb-3">
              <div class="card clickable" data-card-id="4" id="carousel-card-4">
                <img
                  class="img-fluid"
                  alt="100%x280"
                  src="/Bilderkarussell/skulptur.jpg"
                />
                <div class="card-body">
                  <h4 class="card-title">Skulptur</h4>
                  <p class="card-text"></p>
                </div>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="card clickable" data-card-id="5" id="carousel-card-5">
                <img
                  class="img-fluid"
                  alt="100%x280"
                  src="/Bilderkarussell/freifläche.jpg"
                />
                <div class="card-body">
                  <h4 class="card-title">Graffiti Freifläche</h4>
                  <p class="card-text"></p>
                </div>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="card clickable" data-card-id="6" id="carousel-card-6">
                <img
                  class="img-fluid"
                  alt="100%x280"
                  src="/Bilderkarussell/graffiti.jpg"
                />
                <div class="card-body">
                  <h4 class="card-title">Illegale Graffiti</h4>
                  <p class="card-text"></p>
