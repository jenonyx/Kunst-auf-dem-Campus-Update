  <!-- Div to display each image's title, description and the image of each card that was clicked in the image-carousel-->
  <div id="description-display" class="description-box text-center hidden">
    <div class="container">
      <div class="row mx-5">
        <div class="col-12 col-md-3 custom-bg-grey mx-3 my-3">
          <div class="centered-text">
            <img
              src="/Illustrationen/brushes_b.png"
              class="img-fluid"
              alt="art image"
            />
            <h3 class="color-scheme-text" id="description-display-title"></h3>
          </div>
        </div>
        <div class="col-12 col-md-8 custom-bg-grey mx-3 my-3">
          <div class="d-flex flex-row align-items-center">
            <img src="/Icons/Arrow_smaller.png" alt="arrow icon" />
            <p class="mx-3" id="description-display-text"></p>
          </div>
          <img
            src=""
            class="img-fluid"
            id="description-display-image"
            alt="Card Image"
          />
        </div>
      </div>
    </div>
